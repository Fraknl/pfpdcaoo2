<link rel="stylesheet" href="/css/usuario.css">
<link rel="stylesheet" href="/css/bootstrap.css">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
<!--<script src="/js/wsBrowserClient.js" ></script>-->
<script src="/js/client.js" charset="utf-8"></script>


<body>  

    <!--INICIA PAGINA PARA MOSTRAR LOS CLIENTES-->
    <div style="padding-top: 50px" id="clientsDetails">
        <div class="row">
            <div class="card col-md-12 p-4">
                <div class="row">
                    <div class="col-md-8">
                        <h5>CLIENTES</h5>
                    </div>
                    <div class="col-md-4 p-1">
                        <div class="card card-body text-center">
                            {{#if datosClientes}}
                                <button onclick="setPageAddStation()" class="btn btn-info">
                                    Agregar nuevo cliente</button>
                            {{else}}
                                <p>No existe ningun cliente registrado en la base de datos</p>
                                <button onclick="addFirstClientForm()">Registrar primer cliente</button>
                            {{/if}}
                        </div>
                    </div>
                </div>
                <table class="table text-center">
                    <thead>
                        <tr>
                            <th>R.U.C.</th>
                            <th>NOMBRE</th>
                            <th>CIUDAD</th>
                            <th>DIRECCION</th>
                            <th>TELEFONO</th>
                            <th>EMAIL</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each datosClientes}}
                        {{this}}
                        <tr>
                            <td>{{ruc}}</td>
                            <td>{{razon_social}}</td>
                            <td>{{ciudad}}</td>
                            <td>{{direccion}}</td>
                            <td>{{telefono}}</td>
                            <td>{{email}}</td>
                            
                            <td class="text-center">
                                <button onclick="toClientProfile({{@index}})" title="Perfil Cliente" 
                                class="btn btn-info btn-sm"><em class="fa fa-eye"></em></button>
                                <button onclick="toDeleteClientAlert({{id_cliente}})" title="Eliminar Cliente" 
                                class="btn btn-danger btn-sm"><em class="fa fa-trash"></em></button>
                            </td>
                        </tr>
                        {{/each}} 

                    </tbody>
                </table>
            </div>  
        </div>
    </div>
    <!--TERMINA PAGINA PARA MOSTRAR LOS CLIENTES-->


    <!--INICIA SECCION PARA MOSTRAR EL PERFIL DEL CLIENTE-->
    <div class="card p-3" id="clientProfile" style="display: none;">
        <div class="card card-header">
            Perfil del Cliente
        </div>

        <div class="card card-body">
            <div class="row">
                <div class="col-md-3 text-center">
                    {{#if datosCliente.foto_cliente}}
                    <img src="/images/clientes/{{datosCliente.foto_cliente}}" 
                    width="100px" height="100px" style="border: 1px solid; padding: 1px">
                    {{else}}
                    <img src="/images/clientes/logoCliente.png" 
                    width="100px" height="100px" style="border: 1px solid; padding: 1px">
                    {{/if}}
                </div>
                <div class="col-md-9">
                    <div class="card">
                        <div class="card card-header">
                            Datos Personales
                        </div>
                        <div class="card card-body">
                            Aqui los datos personales
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-footer">
            <div>
                <button class="btn btn-info" onclick="toClientsDetails()">Volver</button>
            </div>
        </div>
        
    </div>
    <!--TERMINA SECCION PARA MOSTRAR EL PERFIL DEL CLIENTE-->


</body>
